<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="35"
            android:id="@+id/rlBackground">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="35"
            android:id="@+id/rlStimulus">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:id="@+id/rlSetting">
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center"
                android:id="@+id/rgToggle"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:text="Back"
                    android:id="@+id/rbBackground"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center|right"
                    android:text="Stimulus"
                    android:id="@+id/rbStimulus"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_below="@id/rgToggle"
                android:id="@+id/rlAlphaGroup">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvAlpha"
                    android:text="Alpha"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/tvAlpha"
                    android:id="@+id/rlAlphaValue"
                    android:layout_toRightOf="@id/tvAlpha">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/btnAlphaMinus"
                        android:text="-"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:id="@+id/tvAlphaValue"
                        android:text="255"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/btnAlphaPlus"
                        android:text="+"/>
                </RelativeLayout>
                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlAlphaValue"
                    android:max="255"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/sbAlphaValue"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_below="@id/rlAlphaGroup"
                android:id="@+id/rlGreyGroup">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvGrey"
                    android:text="Grey"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/tvGrey"
                    android:id="@+id/rlGreyValue"
                    android:layout_toRightOf="@id/tvGrey">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/btnGreyMinus"
                        android:text="-"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:id="@+id/tvGreyValue"
                        android:text="255"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/btnGreyPlus"
                        android:text="+"/>
                </RelativeLayout>
                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlGreyValue"
                    android:max="255"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/sbGreyValue"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rlGreyGroup"
                android:background="@android:color/holo_red_dark"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:layout_below="@id/rlGreyGroup"
                android:id="@+id/rlScreenGroup">
                <TextView
                    android:layout_width="32dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvScreen"
                    android:text="Screen"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/tvScreen"
                    android:id="@+id/rlScreenValue"
                    android:layout_toRightOf="@id/tvScreen">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/btnScreenMinus"
                        android:text="-"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:id="@+id/tvScreenValue"
                        android:text="255"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/btnScreenPlus"
                        android:text="+"/>
                </RelativeLayout>
                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlScreenValue"
                    android:max="1000"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/sbScreenValue"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rlScreenGroup"
                android:background="@android:color/holo_red_dark"/>
        </RelativeLayout>
    </LinearLayout>
